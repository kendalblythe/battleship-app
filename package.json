{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --no-daemon",
    "dev": "turbo run dev --parallel --no-daemon",
    "lint": "turbo run lint --no-cache --no-daemon",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "8.29.0",
    "prettier": "2.8.1",
    "turbo": "latest",
    "typescript": "4.9.4"
  },
  "packageManager": "yarn@1.22.17"
}
